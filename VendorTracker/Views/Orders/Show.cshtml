@{
  Layout = "_Layout";
}

<h1>Vendor Tracker Order Details: </h1>
<div class="card" style="width: 25rem;">
  <div class="card-body">
    <h3 class="card-title">Vendor: @Model["vendor"].VendorName</h3>
    <h4 class="card-title">Title: @Model["order"].Title</h4>
    <div class="card-text">
      <h4>Order Description: @Model["order"].Description</h4>
      <h4>Invoiced Price: $@Model["order"].Price</h4>
      <h4>Date of Order: @Model["order"].OrderDate</h4>
      <h4>Paid? @Model["order"].Paid</h4>
      @{
        bool isPaid = @Model["order"].Paid;
      }
      @if (@isPaid)
      {
        <form action="/vendors/{vendorId}/orders/{orderId}/edit" method="post">
          <button type="submit">Mark Unpaid</button>
        </form>
      }

      @if (!@isPaid)
        {
          <form action="/vendors/{vendorId}/orders/{orderId}/edit" method="post">
            <button type="submit">Mark Paid</button>
          </form>
        }
    </div>
  </div>
</div>

<hr>
<form action='/vendors/@Model["vendor"].Id/orders/new' method="get">
  <button type="submit">Add another order</button>
</form>
<form action='/vendors' method="get">
  <button type="submit">Vendors Home</button>
</form>

